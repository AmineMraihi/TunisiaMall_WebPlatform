{% extends "TunisiaMallBundle::templateadmin.html.twig" %}
{% block robots %}

    <section id="content">

        <div class="page page-full page-mail">


            <div class="tbox tbox-sm">


                <!-- left side -->
                <!-- /left side -->


                <!-- right side -->
                <div class="tcol">
                    <!-- right side header -->
                    <!-- /right side header -->


                    <!-- right side body -->
                    <div class="p-15">

                        <form action="{{ path('tunisia_mall_send_sms') }}" method="POST" name="newMail" class="form-horizontal mt-20">

                            <div class="form-group">
                                <label class="col-lg-2 control-label">To:</label>
                                <div class="col-lg-8">
                                    <select name="select" data-placeholder="Select recipients..." multiple="" tabindex="3"
                                            class="chosen-select" style="width: 100%;">
                                      {% for user in users %}
                                        <option id="to-reciever"  value="{{ user.numeroTelephone }}">{{ user.nom }}</option>
                                       {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-2 control-label">Subject:</label>
                                <div class="col-lg-8">
                                    <input type="text" name="subject" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-2 control-label">Content:</label>
                                <div class="col-lg-8">
                                    <input type="text" name="content" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-8 col-lg-offset-2">
                                    <button type="submit" class="btn btn-greensea btn-ef btn-ef-7 btn-ef-7b b-0 br-2"><i class="fa fa-envelope"></i> Send Message</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- /right side body -->

                </div>
                <!-- /right side -->

            </div>


        </div>

    </section>
    <!--/ CONTENT -->



{% endblock robots %}

